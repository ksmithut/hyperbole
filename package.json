    "promise"
  ],
  "author": "ksmithut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ksmithut/hyperbole/issues"
  },
  "homepage": "https://github.com/ksmithut/hyperbole",
  "devDependencies": {
    "chai": "^2.3.0",
    "codeclimate-test-reporter": "0.0.4",
    "express": "^4.12.3",
    "istanbul": "^0.3.13",
    "jshint": "^2.7.0",
    "jshint-stylish": "^1.0.2",
    "mocha": "^2.2.4",
    "mocha-lcov-reporter": "0.0.2",
    "supertest-as-promised": "^2.0.0"
  },
  "dependencies": {
    "bluebird": "^2.9.25"
